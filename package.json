{
  "name": "wp-bomb",
  "version": "1.2.0",
  "description": "Tons of utility for WordPress developers.",
  "author": "tranthethang",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "dev": "npm run dev:css & npm run dev:js",
    "dev:css": "postcss assets/css/dev-tools.css -o assets/dist/css/dev-tools.min.css --watch",
    "dev:js": "esbuild assets/js/dev-tools.js --bundle --format=iife --outfile=assets/dist/js/dev-tools.min.js --watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss assets/css/dev-tools.css -o assets/dist/css/dev-tools.min.css",
    "build:prod": "NODE_ENV=production npm run build:css && npm run build:js",
    "build:js": "esbuild assets/js/dev-tools.js --bundle --format=iife --outfile=assets/dist/js/dev-tools.min.js --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.20.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.4.1"
  }
}
